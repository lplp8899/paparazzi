<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="1.2" ground_alt="0" lat0="51.990634" lon0="4.376789" max_dist_from_home="10" name="Rotorcraft Basic (Enac)" security_height="1.2">
  <header>
#include "autopilot.h"
  </header>
  <waypoints>
    <!--waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="0.0" y="5.0"/>
    <waypoint name="STDBY" x="-2.0" y="-5.0"/>
    <waypoint name="TD" x="0.6" y="-1.9"/>
    <waypoint name="HERE" x="0.4" y="-2.9"/>
    <waypoint lat="51.990639" lon="4.376807" name="p1"/>
    <waypoint lat="51.990624" lon="4.376767" name="p2"/>
    <waypoint lat="51.990648" lon="4.376745" name="p3"/>
    <waypoint lat="51.990663" lon="4.376784" name="p4"/>
    <waypoint lat="51.990635" lon="4.376836" name="FA1"/>
    <waypoint lat="51.990606" lon="4.376760" name="FA2"/>
    <waypoint lat="51.990652" lon="4.376712" name="FA3"/>
    <waypoint lat="51.990681" lon="4.376791" name="FA4"/-->
    <waypoint name="HOME" x="0.0" y="0.0" alt="1.2"/>
    <waypoint name="CLIMB" x="0.0" y="5.0" alt="1.2"/>
    <waypoint name="STDBY" x="-2.0" y="-5.0" alt="1.2"/>
    <waypoint name="TD" x="0.6" y="0.9" alt="1.2"/>
    <waypoint name="HERE" x="0.4" y="0.9" alt="1.2"/>
    <waypoint lat="51.990637" lon="4.376804" alt="1.2" name="p1"/>
    <waypoint lat="51.990625" lon="4.376775" alt="1.2" name="p2"/>
    <waypoint lat="51.990643" lon="4.376755" alt="1.2" name="p3"/>
    <waypoint lat="51.990655" lon="4.376784" alt="1.2" name="p4"/>
    <!--waypoint lat="51.990635" lon="4.376836" alt="1.2" name="FA1"/>
    <waypoint lat="51.990606" lon="4.376760" alt="1.2" name="FA2"/>
    <waypoint lat="51.990652" lon="4.376712" alt="1.2" name="FA3"/>
    <waypoint lat="51.990681" lon="4.376791" alt="1.2" name="FA4"/-->
    <!-- corner coordinates of the flight area-->
    <waypoint lat="51.990624" lon="4.376867" alt="1.2" name="FA1"/>
    <waypoint lat="51.990593" lon="4.376779" alt="1.2" name="FA2"/>
    <waypoint lat="51.990646" lon="4.376724" alt="1.2" name="FA3"/>
    <waypoint lat="51.990677" lon="4.376812" alt="1.2" name="FA4"/>

  </waypoints>
  <sectors>
    <sector color="red" name="Flight_Area">
      <corner name="FA4"/>
      <corner name="FA3"/>
      <corner name="FA2"/>
      <corner name="FA1"/>
    </sector>
  </sectors>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call fun="NavSetWaypointHere(WP_HOME)"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <call fun="NavSetWaypointHere(WP_TD)"/>
      <call fun="NavSetAltitudeReferenceHere()"/>
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
    <block name="Start Engine">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 2.0" deroute="Standby"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay vmode="climb" climb="0.5" wp="CLIMB"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <stay wp="STDBY"/>
    </block>
    
    <block name="go_p1">
      <exception cond="turn_ref_vision() > 10.0" deroute="go_home"/>
      <exception cond="-10.0 > turn_ref_vision() " deroute="go_p4"/>
      <!--call fun="set_heading_ref_vision()"/-->
      <call fun="nav_set_heading_towards_waypoint(WP_p1)"/>
      <call fun="NavSetWaypointHere(WP_HERE)"/>
      <stay wp="HERE" until="stage_time>2"/>
      
      <go from="HERE" hmode="route" wp="p1"/>
      <stay wp="p1" until="stage_time>2"/>
      <deroute block="go_p2"/>
    </block>
    <block name="go_p2">
      <exception cond="turn_ref_vision() > 10.0" deroute="go_home"/>
      <exception cond="-10.0 > turn_ref_vision() " deroute="go_p1"/>
      <!-- fun="set_heading_ref_vision()"/-->
      <call fun="nav_set_heading_towards_waypoint(WP_p2)"/>
      <call fun="NavSetWaypointHere(WP_HERE)"/>
      <stay wp="HERE" until="stage_time>2"/>
      
      <go from="HERE" hmode="route" wp="p2"/>
      <stay wp="p2" until="stage_time>2"/>
      <deroute block="go_p3"/>
    </block>
    <block name="go_p3">
      <exception cond="turn_ref_vision() > 10.0" deroute="go_home"/>
      <exception cond="-10.0 > turn_ref_vision() " deroute="go_p2"/>
      <!-- fun="set_heading_ref_vision()"/-->
      <call fun="nav_set_heading_towards_waypoint(WP_p3)"/>
      <call fun="NavSetWaypointHere(WP_HERE)"/>
      <stay wp="HERE" until="stage_time>2"/>
      
      <go from="HERE" hmode="route" wp="p3"/>
      <stay wp="p3" until="stage_time>2"/>
      <deroute block="go_p4"/>
    </block>
    <block name="go_p4">
      <exception cond="turn_ref_vision() > 10.0" deroute="go_home"/>
      <exception cond="-10.0 > turn_ref_vision() " deroute="go_p3"/>
      <!--call fun="set_heading_ref_vision()"/-->
      <call fun="nav_set_heading_towards_waypoint(WP_p4)"/>
      <call fun="NavSetWaypointHere(WP_HERE)"/>
      <stay wp="HERE" until="stage_time>2"/>
      
      <go from="HERE" hmode="route" wp="p4"/>
      <stay wp="p4" until="stage_time>2"/>
      <deroute block="go_p1"/>
    </block>
    
    <block name="go_home">
      <exception cond="turn_ref_vision() > 10.0" deroute="Path_vision"/>
      <exception cond="-10.0 > turn_ref_vision() " deroute="Path_vision"/>
      <!--call fun="nav_set_heading_deg(90)"/-->
      <call fun="nav_set_heading_towards_waypoint(WP_HOME)"/>
      <go wp="HOME"/>
      <stay wp="HOME" until="stage_time>5"/>
      <deroute block="go_p1"/>
    </block>
    
    <block name="set_heading_vision">
       <!--call fun="vision_set_heading_deg()" /-->
       <call fun="set_heading_ref_vision()"/>
       <deroute block="test_heading_vision"/>
       <!--stay wp="p1"/-->
    </block>
    
    <block name="test_heading_vision">
      <!--while cond ="TRUE"/-->
       <!--call fun="vision_set_heading_deg()" /-->
      <call fun="set_heading_ref_vision()"/>
      <call fun="NavSetWaypointHere(WP_HERE)"/>
      <!--call fun="nav_set_heading_deg(180)"/-->
      <stay wp="HERE" until="stage_time>2"/>
      <deroute block="set_heading_vision"/>
      <!--stay wp="HERE"/-->
    </block>
    
    <block name="stay here">
    <call fun="NavSetWaypointHere(WP_HERE)"/>
    <stay wp="HERE"/>
    </block>
    
    <block name="Path_vision">
       <exception cond="turn_ref_vision() > 10.0" deroute="go_p1"/>
       <exception cond="-10 > turn_ref_vision()" deroute="go_p2"/>
       <!-- cond="turn_ref_vision() == 0.0" deroute="go_home"/-->
       <deroute block="go_home"/>
       <!--deroute block="stay here"/-->
    </block>
    
    <!--block name="heading_vision">
     <exception cond="turn_ref_vision() == -45" deroute="turn_left"/>
     <exception cond="turn_ref_vision() == 0" deroute="go_home"/>
     <exception cond="turn_ref_vision() == 45" deroute="turn_right"/>
     <stay wp="HOME"/>
    </block-->
    
    <block name="turn_left">
      <!--call fun="nav_set_heading_deg(90)"/-->
      <call fun="set_heading_ref_vision()"/>
      <call fun="NavSetWaypointHere(WP_HERE)"/>
      <!--call fun="nav_set_heading_deg(90)"/-->
      <!--deroute block="real_mission"/>-->
      <stay wp="HERE"/>
      <stay wp="p1"/>
    </block>
    
    <block name="turn_right">
      <!--call fun="nav_set_heading_deg(180)"/-->
      <call fun="set_heading_ref_vision()"/>
      <call fun="NavSetWaypointHere(WP_HERE)"/>
      <!--call fun="nav_set_heading_deg(180)"/-->
      <!--deroute block="real_mission"/>-->
      <stay wp="HERE"/>
      <stay wp="p2"/>
    </block>
    
    <block name="line_p1_p2">
      <go from="p1" hmode="route" wp="p2"/>
      <stay wp="p2" until="stage_time>10"/>
      <go from="p2" hmode="route" wp="p1"/>
      <deroute block="go_p1"/>
    </block>
    <block name="route">
      <go from="p1" hmode="route" wp="p3"/>
      <stay wp="p3" until="stage_time>10"/>
      <go from="p3" hmode="route" wp="p4"/>
      <stay wp="p4" until="stage_time>10"/>
      <go from="p4" hmode="route" wp="p1"/>
      <deroute block="go_p1"/>
    </block>
    <block name="land here" strip_button="Land Here" strip_icon="land-right.png">
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="-0.8" vmode="climb" wp="TD"/>
    </block>
    <block name="landed">
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
  </blocks>
</flight_plan>
